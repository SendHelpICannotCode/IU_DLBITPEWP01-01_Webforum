# PostgreSQL Datenbank-Konfiguration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=webforum

# Datenbank-Verbindung (Werte muessen mit obigen uebereinstimmen)
DATABASE_URL=postgresql://postgres:your_secure_password_here@localhost:5432/webforum?schema=public

# Session-Secret fuer iron-session (32+ Zeichen)
# WICHTIG: In Produktion durch ein sicheres, zufaelliges Secret ersetzen!
SESSION_SECRET=replace-with-a-secure-random-secret-at-least-32-chars